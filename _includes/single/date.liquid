{% assign document = post | default: page %}
{% if document.show_date and document.date %}
  {% assign date_format = site.date_format | default: "%d-%m-%Y" %}
  <span class="page__meta-date">
    <i class="far {% if include.type == 'grid' and document.show_date %}fa-fw {% endif %}fa-calendar-alt" aria-hidden="true"></i>
    <time datetime="{{ document.date | date_to_xmlschema }}">{{ document.date | date: date_format }}</time>
  </span>
{% endif %}
