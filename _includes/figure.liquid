<figure class="{{ include.class }}">
  {% assign path = include.path | relative_url %}
  <a href="{% if include.reference %}{{ include.reference }}{% else %}{{ path }}{% endif %}" {% if include.title %}title="{{ include.title }}"{% endif %}>
    <img src="{% if include.path %}{{ path }}{% else %}{{ include.reference }}{% endif %}" alt="{% if include.alt %}{{ include.alt }}{% endif %}">
  </a>
  {% if include.caption %}
    <figcaption>{{ include.caption | markdownify | remove: "<p>" | remove: "</p>" }}</figcaption>
  {% endif %}
</figure>
